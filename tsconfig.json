{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "build"
  },
  "include": [
    "src/**/*",
    "package.json"
  ],
  "exclude": [
    "node_modules"
  ]
}
